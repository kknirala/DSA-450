// 	Find the "Kth" max and min element of an array

let ar = [3,5,7,1,2,45,67,99,43,11,37,82,31];
let k = 3;
// --------------------------------------------
// 1st approach.  ==>  short an array and pick from 3rd index from start and (length-3-1) from last
let arr = ar.sort(function(a,b) { return a-b });
console.log(arr);
console.log("Min->", ar[k]);
console.log("Max->", ar[ar.length-k-1]);
// 2nd approach  ==> 
